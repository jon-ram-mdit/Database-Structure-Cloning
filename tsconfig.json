{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],  
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/tests",
    "database/migrations"
  ]
}
